---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import HeroCard from "../components/HeroCard.astro";
import WorkCard from "../components/WorkCard.astro";
import GolfCard from "../components/GolfCard.astro";
import MusicCard from "../components/MusicCard.astro";
import VibeCard from "../components/VibeCard.astro";
import ContactCard from "../components/ContactCard.astro";
---

<script>
  import { stagger, animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        type: "spring",
        at: "-0.1",
        delay: stagger(0.3),
      },
    ],
  ];

  animate(sequence as AnimationSequence);
</script>

<Layout
  description="Client Services at Lickability. Golf obsessive. Coffee enthusiast."
  title="Thomas DeVuono"
>
  <!-- Top section: Hero + Work side by side -->
  <section class="text-white m-auto p-2 max-w-6xl w-full sm:p-4 md:p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-2 sm:gap-2 md:gap-3 lg:gap-4">
      <HeroCard />
      <WorkCard />
    </div>
  </section>
  
  <!-- Golf section - full width -->
  <section class="text-white m-auto px-2 pb-2 max-w-6xl w-full sm:px-4 sm:pb-4 md:px-6 md:pb-6">
    <GolfCard />
  </section>
  
  <!-- Bottom section: Music + Vibe + Contact - 3 equal cards -->
  <section class="text-white m-auto px-2 pb-2 max-w-6xl w-full sm:px-4 sm:pb-4 md:px-6 md:pb-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 sm:gap-2 md:gap-3 lg:gap-4">
      <MusicCard />
      <VibeCard />
      <ContactCard />
    </div>
  </section>
  
  <!-- Footer -->
  <footer class="text-white m-auto px-2 pb-4 max-w-6xl w-full sm:px-4 md:px-6">
    <Card colSpan="md:col-span-4" rowSpan="md:row-span-1">
      <p class="text-xs text-center">
        © 2025 · Crafted with ♥️ using <a
          class="text-red-500"
          href="https://astro.build/"
          target="_blank">Astro</a
        > by Thomas.
      </p>
    </Card>
  </footer>
</Layout>
