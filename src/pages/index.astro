---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import HeroCard from "../components/HeroCard.astro";
import WorkCard from "../components/WorkCard.astro";
import GolfCard from "../components/GolfCard.astro";
import MusicCard from "../components/MusicCard.astro";
import VibeCard from "../components/VibeCard.astro";
import ContactCard from "../components/ContactCard.astro";
---

<script>
  import { stagger, animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        type: "spring",
        at: "-0.1",
        delay: stagger(0.3),
      },
    ],
  ];

  animate(sequence as AnimationSequence);
</script>

<Layout
  description="Client Services at Lickability. Golf obsessive. Coffee enthusiast."
  title="Thomas DeVuono"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:grid-rows-6 lg:grid-cols-4 lg:gap-4"
  >
    <!-- Row 1-2: Hero (large) + Work -->
    <HeroCard />
    <WorkCard />
    <GolfCard />
    
    <!-- Row 3-4: Music + Vibe + Contact -->
    <MusicCard />
    <VibeCard />
    <ContactCard />
    
    <!-- Footer -->
    <Card colSpan="md:col-span-4" rowSpan="md:row-span-1">
      <p class="text-xs text-center">
        © 2025 · Crafted with ♥️ using <a
          class="text-red-500"
          href="https://astro.build/"
          target="_blank">Astro</a
        > by Thomas.
      </p>
    </Card>
  </main>
</Layout>
