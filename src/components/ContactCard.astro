---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-3" title="Let's Connect">
  <div class="flex flex-col gap-3">
    <a href={LINKS.email} class="flex items-center gap-3 text-sm hover:text-primary-500 transition-colors">
      <Button aria-label="email">
        <Icon class="h-5" name="ri:mail-fill" />
      </Button>
      <span>Email</span>
    </a>
    <a href={LINKS.linkedin} target="_blank" class="flex items-center gap-3 text-sm hover:text-primary-500 transition-colors">
      <Button aria-label="linkedin">
        <Icon class="h-5" name="ri:linkedin-box-fill" />
      </Button>
      <span>LinkedIn</span>
    </a>
    <a href={LINKS.twitter} target="_blank" class="flex items-center gap-3 text-sm hover:text-primary-500 transition-colors">
      <Button aria-label="twitter">
        <Icon class="h-5" name="ri:twitter-x-fill" />
      </Button>
      <span>Twitter / X</span>
    </a>
    <a href={LINKS.bookTime} target="_blank" class="flex items-center gap-3 text-sm hover:text-primary-500 transition-colors">
      <Button aria-label="book time">
        <Icon class="h-5" name="ri:calendar-fill" />
      </Button>
      <span>Book Time</span>
    </a>
  </div>
</Card>
