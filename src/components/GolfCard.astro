---
const golfImages = [
  { src: "/Golf Pictures/Bayonne Golf Club.jpeg", title: "Bayonne Golf Club", position: "50% 40%" },
  { src: "/Golf Pictures/Pinehurst Number 2.jpeg", title: "Pinehurst Number 2", position: "50% 25%" },
  { src: "/Golf Pictures/Philadelphia Cricket Club \u2013 Wissahickon.jpeg", title: "Philadelphia Cricket Club" },
  { src: "/Golf Pictures/Wynn Golf Club.jpeg", title: "Wynn Golf Club" },
  { src: "/Golf Pictures/Las Vegas Paiute Golf Resort \u2013 The Wolf.jpeg", title: "Las Vegas Paiute Golf Resort" },
  { src: "/Golf Pictures/Corales Golf Club.jpeg", title: "Corales Golf Club" },
];
---

<div class="card bg-darkslate-500 shadow-lg rounded-lg p-4 md:p-6 border border-darkslate-100 hover:border-primary-500 transition duration-75">
  <!-- Header -->
  <div class="mb-4">
    <h2 class="text-2xl font-bold mb-1">⛳️ Golf</h2>
    <p class="text-base font-light text-neutral-300">
      ~100 rounds/year, single digit handicap
    </p>
  </div>
  
  <!-- Cinematic image gallery - 3 cols desktop, 2 tablet, 1 mobile -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {golfImages.map((image) => (
      <div class="flex flex-col gap-1.5">
        <div class="rounded-xl border border-darkslate-100 overflow-hidden" style="aspect-ratio: 16/10;">
          <img 
            src={image.src} 
            alt={image.title} 
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            style={image.position ? `object-position: ${image.position}` : undefined}
            loading="lazy"
          />
        </div>
        <p class="text-xs text-neutral-400 opacity-75 pl-0.5">{image.title}</p>
      </div>
    ))}
  </div>
</div>
