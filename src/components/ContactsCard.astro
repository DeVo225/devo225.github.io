---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Let's connect!
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="text-gray-500">Work</h2>
      <p><a href={LINKS.lickability} target="_blank" class="hover:underline">Lickability</a></p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="text-gray-500">Socials</h2>
      <ul>
        <li>
          <a href={LINKS.linkedin} target="_blank">LinkedIn</a>
        </li>
        <li>
          <a href={LINKS.twitter} target="_blank">Twitter</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank">Swift Best Practices</a>
        </li>
      </ul>
    </div>
  </div>
</Card>
