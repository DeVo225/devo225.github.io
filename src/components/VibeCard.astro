---
import Card from "./Card/index.astro";

const vibeGifs = [
  { src: "/Vibe GIFs/gold ship aaaah.gif", alt: "Gold Ship" },
  { src: "/Vibe GIFs/sakura-bakushin-o-umamusume.gif", alt: "Sakura Bakushin-O" },
  { src: "/Vibe GIFs/spinny_skelly.gif", alt: "Spinny Skeleton" },
  { src: "/Vibe GIFs/that is a good idea.gif", alt: "That's a good idea" },
];
---

<Card colSpan="md:col-span-1" title="âœ¨ Current Vibe">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    {vibeGifs.slice(0, 4).map((gif) => (
      <div class="rounded-lg overflow-hidden border border-darkslate-100 aspect-square">
        <img 
          src={gif.src} 
          alt={gif.alt}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</Card>
